{
  "name": "iip-ui-vue3",
  "version": "1.2.16",
  "description": "基于Element Plus、Vue 3和TypeScript的企业级组件库",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:packages": "turbo run dev --filter=./packages/*",
    "dev:apps": "turbo run dev --filter=./apps/*",
    "dev:demo": "turbo run dev --filter=./apps/vue-project-demo",
    "dev:demo:watch": "turbo run dev --filter=./packages/* --filter=./apps/vue-project-demo",
    "dev:docs": "turbo run dev --filter=./apps/docs",
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=./packages/*",
    "build:apps": "turbo run build --filter=./apps/*",
    "build:components": "turbo run build --filter=./packages/components",
    "build:utils": "turbo run build --filter=./packages/utils",
    "build:docs": "turbo run build --filter=./apps/docs",
    "build:theme": "turbo run build --filter=./packages/theme",
    "preview:docs": "pnpm --filter @bingwu/iip-ui-docs preview",
    "test:components": "turbo run test --filter=./packages/components",
    "format": "prettier --write .",
    "prepare": "husky install",
    "clean": "turbo run clean",
    "preinstall": "npx only-allow pnpm",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-vue": "^9.18.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "rimraf": "^6.1.0",
    "terser": "^5.44.0",
    "turbo": "^2.6.0",
    "typescript": "^5.3.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.19.5",
    "pnpm": ">=8.10.5"
  },
  "packageManager": "pnpm@8.10.5",
  "keywords": [
    "vue3",
    "typescript",
    "element-plus",
    "component-library",
    "ui"
  ],
  "author": "iip-ui-vue3 Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/BINGWU2003/iip-ui-vue3.git"
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "dayjs": "^1.11.13"
  }
}
