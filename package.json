{
  "name": "iip-ui-vue3",
  "version": "1.0.0",
  "description": "基于Element Plus、Vue 3和TypeScript的企业级组件库",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @iip-ui/components dev",
    "build": "pnpm --filter @iip-ui/components build",
    "build:all": "pnpm -r --filter=!@iip-ui/docs build",
    "docs:dev": "pnpm --filter @iip-ui/docs dev",
    "docs:build": "pnpm --filter @iip-ui/docs build",
    "test": "pnpm -r test",
    "test:unit": "pnpm --filter @iip-ui/components test",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx --fix",
    "lint:style": "echo \"Stylelint temporarily disabled\"",
    "format": "prettier --write .",
    "prepare": "husky install",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-vue": "^9.18.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "postcss-html": "^1.8.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.1.0",
    "stylelint": "^15.11.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recess-order": "^4.4.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.10.5",
  "keywords": [
    "vue3",
    "typescript",
    "element-plus",
    "component-library",
    "ui"
  ],
  "author": "iip-ui-vue3 Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/iip-ui-vue3.git"
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx}": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
