{
  "compilerOptions": {
    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@bingwu/iip-ui-utils": ["packages/utils/src/index.ts"],
      "@bingwu/iip-ui-components": ["packages/components/src/index.ts"]
    },
    /* 公共配置 */
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,
    /* Linting */
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  }
}
